{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Context Fox",
  "version": "0.1.0",
  "identifier": "cat.haven.context-fox",
  "build": {
    "beforeDevCommand": "npx vite",
    "devUrl": "http://127.0.0.1:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Context Fox",
        "width": 1100,
        "height": 900,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/contentfox@2x.png",
      "icons/contentfox.icns",
      "icons/contentfox.ico"
    ]
  }
}
